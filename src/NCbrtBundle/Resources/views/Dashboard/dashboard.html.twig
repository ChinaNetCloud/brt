{% extends 'general.html.twig' %}
{% block title %}
    {{ parent() }}
    - Report{% endblock %}
{% block header %}
    <div>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">BRT ></a>
            </div>
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user"></i>
                        {{ app.user.username }}
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ url('fos_user_profile_show') }}">
                                <i class="fa fa-fw fa-user"></i>
                                Profile</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#" data-toggle="modal" data-target="#logout">
                                <i class="fa fa-fw fa-power-off"></i>
                                Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div id="navbar" class="navbar-collapse collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('search_home') }}">Home</a>
                    </li>
                    <li class="active">
                        <a href="{{ path('stats_general') }}">Report</a>
                    </li>
                    <li>
                        <a href="{{ path('about_main') }}">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endblock %}
{% block dynamic_content %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Filter by time</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-inline form-control-static">
                <div class="form-group">
                    {{ form_label(form.date_start) }}
                    <div class='input-group'>
                        {{ form_widget(form.date_start, {'attr':{'class':'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    {{ form_errors(form.date_start) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date_end) }}
                    <div class='input-group'>
                        {{ form_widget(form.date_end, {'attr':{'class':'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    {{ form_errors(form.date_end) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.report, {'attr': {'class': 'btn btn-info'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    {% if total_backups is empty %}
    {% else %}
        <div class="text-center">
            <div>
                <h3>Total backups: {{ total_backups }}</h3>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-6">
            <h4 class="text-center">Production backup events report by status</h4>
            <canvas id="backupStatus" width="400" height="200"></canvas>
        </div>
        <div class="col-xs-6">
            <h4 class="text-center">Production backup events by method</h4>
            <canvas id="backupMethod" class="chartjs" width="770" height="385"
                    style="display: block; width: 770px; height: 385px;"></canvas>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        ctx = document.getElementById("backupStatus").getContext('2d');
        backupStatus = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Successful", "Failed", "No reported", "Other Status"],
                datasets: [{
                    label: '# Backups',
                    data: [ {{ total_successful_backups }}, {{ total_fail_backups }}, {{ total_no_report_backups }}, {{ total_other_status }}],
                    backgroundColor: [
                        'rgba(63, 191, 89, 0.5)',
                        'rgba(242, 61, 38, 0.5)',
                        'rgba(218, 242, 38, 0.5)',
                        'rgba(153, 102, 255, 0.5)'
                    ],
                    borderColor: [
                        'rgba(63, 191, 89, 1)',
                        'rgba(242, 61, 38, 1)',
                        'rgba(218, 242, 38, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        ctx = document.getElementById("backupMethod"),
            backupMethod = new Chart(ctx,
                {
                    type: "pie",
                    data: {
                        labels: ["NC Backup-Py", "NC Backup (Bash)", "Other Method"],
                        datasets: [{
                            data: [{{ total_backups_nc_backup_py }}, {{ total_backups_nc_script }}, {{ total_backups_method_other }}],
                            backgroundColor: ["#007bff", "#dc3545", "#ffc107"]
                        }]
                    }
                });
        jQuery('#date_search_date_start').datetimepicker({
            format: 'm/d/Y H:i:s'
        });
        jQuery('#date_search_date_end').datetimepicker({
            format: 'm/d/Y H:i:s'
        });

    </script>
{% endblock %}