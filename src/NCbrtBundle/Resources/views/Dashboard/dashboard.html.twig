{% extends 'general.html.twig' %}
{% block title %}
    {{ parent() }}
    - Report{% endblock %}
{% block header %}
    <div>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">BRT ></a>
            </div>
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user"></i>
                        {{ app.user.username }}
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#">
                                <i class="fa fa-fw fa-user"></i>
                                Profile</a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-fw fa-gear"></i>
                                Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#" data-toggle="modal" data-target="#logout">
                                <i class="fa fa-fw fa-power-off"></i>
                                Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div id="navbar" class="navbar-collapse collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('search_home') }}">Home</a>
                    </li>
                    <li class="active">
                        <a href="{{ path('stats_general') }}">Report</a>
                    </li>
                    <li>
                        <a href="{{ path('about_main') }}">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endblock %}
{% block dynamic_content %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Filter by time</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-inline">
                <div class="form-group">
                    {{ form_label(form.date_start) }}
                    {{ form_widget(form.date_start) }}
                    {{ form_errors(form.date_start) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date_end) }}
                    {{ form_widget(form.date_end) }}
                    {{ form_errors(form.date_end) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            {{ form_widget(form.report, {'attr': {'class': 'btn btn-info'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="row">
        <div class="col-xs-6">
            {#{% if total_backups is defined and total_backups is not empty%}#}
            <h4>Production backup events report by status</h4>
            <div>
                <table class="table table-hover table-responsive table-bordered table-striped">
                    <tr>
                        <td>Total backups:
                        </td>
                        <td>{{ total_backups is empty ? 'N/A' : total_backups }}</td>
                    </tr>
                    <tr>
                        <td>Total successful backups:
                        </td>
                        <td>{{ total_successful_backups is empty ? 'N/A' : total_successful_backups }}</td>
                    </tr>
                    <tr>
                        <td>Total failed backups:
                        </td>
                        <td>{{ total_fail_backups is empty ? 'N/A' : total_fail_backups }}</td>
                    </tr>
                    <tr>
                        <td>Total no reported backups:
                        </td>
                        <td>{{ total_no_report_backups is empty ? 'N/A' : total_no_report_backups }}</td>
                    </tr>
                    <tr>
                        <td>Total with other warnings:
                        </td>
                        <td>{{ total_other_status is empty ? 'N/A' : total_other_status }}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-xs-6">
            <h4>Production backup events by method</h4>
            <div>
                <table class="table table-hover table-responsive table-bordered table-striped">
                    <tr>
                        <td>Total backups:
                        </td>
                        <td>{{ total_backups is empty ? 'N/A' : total_backups }}</td>
                    </tr>
                    <tr>
                        <td>Total nc-backup-py:
                        </td>
                        <td>{{ total_backups_nc_backup_py is empty ? 'N/A' : total_backups_nc_backup_py }}</td>
                    </tr>
                    <tr>
                        <td>Total ncbackup (bash):
                        </td>
                        <td>{{ total_backups_nc_script is empty ? 'N/A' : total_backups_nc_script }}</td>
                    </tr>
                    <tr>
                        <td>Other backup method:
                        </td>
                        <td>{{ total_backups_method_other is empty ? 'N/A' : total_backups_method_other }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <canvas id="backupStatus" width="400" height="200"></canvas>
        </div>
        <div class="col-xs-6">
            <canvas id="backupMethod" class="chartjs" width="770" height="385" style="display: block; width: 770px; height: 385px;"></canvas>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        ctx = document.getElementById("backupStatus").getContext('2d');
        backupStatus = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Total Backups", "Successful", "Failed", "No reported", "Other Status"],
                datasets: [{
                    label: '# Backups',
                    data: [{{ total_backups }}, {{ total_successful_backups }}, {{ total_fail_backups }}, {{ total_no_report_backups }}, {{ total_other_status }}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        ctx = document.getElementById("backupMethod"),
        backupMethod = new Chart(ctx,
                {
                    type: "pie",
                    data: {
                        labels: ["NC Backup-Py", "NC Backup (Bash)", "Other Method"],
                        datasets: [{
                            data: [{{ total_backups_nc_backup_py }}, {{ total_backups_nc_script }}, {{ total_backups_method_other }}],
                            backgroundColor: ["#007bff", "#dc3545", "#ffc107"]
                        }]
                    }
                });


    </script>
{% endblock %}